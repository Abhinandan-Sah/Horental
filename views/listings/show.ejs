<% layout("layouts/boilerplate") -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-8 offset-2 listing-card ">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img w-100 "
      alt="listing_image"
    />
    <div class="card-body">
      <!-- <p class="card-text"> -->
        <p class="card-text">Owned by: <i><%=listing.owner %></i></p>
        <p class="card-text">Email id: <i><%=listing.email %></i></p>
        <br />
        <p class="card-text"><%= listing.description %></p> <br />
        
        <p class="card-text"><%= listing.location %></p> <br />
        <p class="card-text"><%= listing.country %></p> <br />
      <!-- </p> -->
      <a href="/book" class="btn bg-success btn-outline-dark text-white">Book now</a>
    </div>
  </div>

  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn edit-btn col-xl-1 offset-2"
      >Edit</a
    >
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>

  <div class="col-8 offset-2 mb-3">
    <hr />
    <h4>Leave a Review</h4>
    <form
      method="POST"
      action="/listings/<%= listing._id %>/reviews"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
          
        />
      </div>

      <div class="mb-3 mt-3">
        <label for="comment">Comments</label><br />
        <textarea
          name="review[comment]"
          id="comment"
          cols="25"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide some feedback.</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr />

    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">Jane Doe</h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> star</p>
          <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btn-sm btn btn-dark">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
